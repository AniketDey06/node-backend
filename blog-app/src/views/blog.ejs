<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
        <title>blog</title>
</head>

<body>
    <%- include('./partials/nav.ejs') %>


    <div class="container mt-4">
        <h1>
            <%= blog.title %>
        </h1>
        <img src="<%= blog.coverImageURL %>" width="400px" alt="">
        <pre><%= blog.body %></p>
    </div>

    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageURL %>" width="50px" alt="">By: <%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-2">
        <h1>Comments (<%= comments.length %>)</h1>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="POST">
                <div class="mb-3">
                    <input type="text" name="content" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter your comment">
                    <button type="submit" class="btn btn-primary mt-2">Submit</button>
                </div>
            </form>
        <% } %>
        <div class="mt-3">
            <% comments.forEach(comment => { %>
                <img src="<%= comment.createdBy.profileImageURL %>" width="50px" alt="">
                <%= comment.createdBy.fullName %>
                <pre><%= comment.content %></pre>

            <% }) %>
        </div>
    </div>

    <%- include('./partials/scripts.ejs') %>
</body>

</html>